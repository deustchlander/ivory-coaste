# --------------------------------------------
# Backend Environment Variables
# --------------------------------------------

# Application
PROJECT_NAME=Resort Backend API
ENVIRONMENT=development
DEBUG=false

# Security
SECRET_KEY=change-this-to-a-strong-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (Docker service name = db)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=resort_db

# Optional: override full DB URL if needed
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/resort_db

# CORS (NGINX-served frontend)
BACKEND_CORS_ORIGINS=["http://localhost"]

# Logging
LOG_LEVEL=INFO
